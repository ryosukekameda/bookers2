
<div class="col-md-3">
  <h2>User info</h2>
    <table class="table">
      <tbody>
        <tr>
          <th><%= image_tag user.get_profile_image(100, 100) %></th>
        </tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
    
    <% if user.id == current_user.id %>
      <div class="row">
  
          <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog" aria-hidden="true">
          </i>
          <% end %>
        </div>
    <% end %>

      <h2 class="mt-3">New book</h2>
  
      <%= form_with model: book do |f| %>
      <form>
        <div class="form-group">
          <label for="book_title">Title</label>
          <br><%= f.text_field :title, :class => 'form-control', :type => 'text', :id => 'book_title' %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, :class => 'form-control book_body', :id => 'book_body' %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book", :type => 'submit', :name => 'commit', :class => 'btn btn-success', :data_disable_with => 'Create Book' %>
        </div>
      </form>
    <% end %>
</div>