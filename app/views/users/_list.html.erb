<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
  <h2>User info</h2>
    <table class="table">
      <tbody>
        <tr>
          <th><%= image_tag user.get_profile_image(100, 100) %></th>
        </tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th></th>
        </tr>
      </tbody>
    </table>
    
    <% if user.id == current_user.id %>
      <div class="row">
        
        <div class="btn btn-outline-secondary btn-block">
          <%= link_to(edit_user_path(user.id)) do %>
          <i class="fas fa-user-cog" aria-hidden="true">
          </i>
          <% end %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class ="col-md-3">
      <h2 class="mt-3">New book</h2>
  
      <%= form_with model: book do |f| %>
  
    <div>
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
  
    <div>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
    </div>
  
    <div>
      <%= f.submit 'Create Book' %>
    </div>
  
    <% end %>
    </div>
  </div>
</div>