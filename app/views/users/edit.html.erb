<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>
      
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model: @user do |f| %>
       <form>
          <div class="form-group">
            <label for="user_name">Name</label>
            <%= f.text_field :name, :class => 'form-control name', :type => 'text', :id => 'user_name' %>
          </div>
  
          <div class="form-group">
            <label for="user_image">Image</label>
            <%= f.file_field :profile_image, :class => 'form-control-file user_image', :accept => 'image/*', :type => 'file', :id => 'user_profile_image' %>
          </div>
          
          <div class="from-group">
            <label for="user_introduction">Introduction</label>
            <%= f.text_area :introduction, :class => 'form-control introduction', :id => 'user_introduction' %>
          </div>
          
          <div class="form-group">
          <%= f.submit "Update User", :class => 'btn btn-secondary', :type => 'submit', :data_disable_with => 'Update User'%>
          </div>
          
        <% end %>

      </form>
    </div>
  </div>
</div>