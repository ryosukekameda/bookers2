<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'users/list', user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
      <tbody>
        <tr>
          <td><%= image_tag @user.get_profile_image(100, 100) %>
          <br><%= link_to @user.name, books_path(current_user) %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td>
            <%= link_to "Edit", edit_book_path(@book.id) %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "destroy", book_path(@book), method: :delete %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
   </div>
  </div>
</div>