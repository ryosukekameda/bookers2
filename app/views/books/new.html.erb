<div class="container px-5 px-sm-0">
  <div class="row">
    <div class ="col-md-3">
      <h2 class="mt-3">New book</h2>
  
      <%= form_with model: @book do |f| %>
  
    <div>
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
  
    <div>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
    </div>
  
    <div>
      <%= f.submit 'Create Book' %>
    </div>
  
    <% end %>
    </div>
  </div>
</div>