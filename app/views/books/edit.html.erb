<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">

      <h1>Editing Book</h1>
      
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model: @book do |f| %>
      <form>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, :class => 'form-control book_title', :type => 'text', :id => 'book_title' %>
         
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, :class => 'form-control book_body', :id => 'book_body' %>
    
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', :class => 'btn btn-success', :type => 'submit', :data_disable_with => 'Update book' %>
        </div>
      </form>
      <% end %>
      <%= link_to 'Show', book_path(@book) %>
      |
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>