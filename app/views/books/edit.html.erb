<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">

      <h1>Editing Book</h1>
      <form>
        <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
         
          <input class="form-control book_title" type="text" value="<%= :title %>" name="book[title]" id="book_title" >
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <% f.text_area :body %>
          <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
        </div>
        <div class="form-group">
          <% f.submit 'Update Book' %>
          <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
        </div>
         <% end %>
      </form>
    </div>
  </div>
</div>