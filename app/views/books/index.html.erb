
    <h2 class="mt-3">New book</h2>
  
      <%= form_with model: @book do |f| %>
  
    <div>
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
  
    <div>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
    </div>
  
    <div>
      <%= f.submit 'Create Book' %>
    </div>
  
  <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
          <div>
          </div>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>